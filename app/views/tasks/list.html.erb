<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <p>
    <input type="checkbox" <%= task[:completed] ? "checked" : "unchecked" %>>
    <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  </p>
<% end %>
<p>
  <%= link_to "Add a new task", task_new_path %>
</p>
